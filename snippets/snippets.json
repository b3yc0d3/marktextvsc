{
    "Center Line(s)": {
        "scope": "marktext",
        "prefix": [
            ".ce"
        ],
        "body": [
            ".ce ${1:NUMBER}",
            "${2:TEXT}"
        ],
        "description": "Centers X Given Lines"
    },
    "Title": {
        "scope": "marktext",
        "prefix": [
            ".tl"
        ],
        "body": [
            ".tl '${1:LEFT}'${2:CENTER}'${3:RIGHT}'"
        ],
        "description": "Creates a Title"
    },
    "Empty Line(s)": {
        "scope": "marktext",
        "prefix": [
            ".el"
        ],
        "body": [
            ".el ${1:NUMBER}"
        ],
        "description": "Adds X Empty Lines"
    },
    "Paragraph": {
        "scope": "marktext",
        "prefix": [
            ".ph"
        ],
        "body": [
            ".ph",
            "${1:TEXT}",
            ""
        ],
        "description": "Creates a Paragraph"
    },
    "Register": {
        "scope": "marktext",
        "prefix": [
            ".nr"
        ],
        "body": [
            ".nr ${1:IDENTIFIER} ${2:VALUE}"
        ],
        "description": "Create new Register"
    },
    "Placeholder": {
        "scope": "marktext",
        "prefix": [
            "\\$",
            "$("
        ],
        "body": [
            "$(${1:IDENTIFIER})"
        ],
        "description": "User value stored in register"
    },
    "Header": {
        "scope": "marktext",
        "prefix": [
            ".hr"
        ],
        "body": [
            ".hr ${1:LEVEL}",
            "${2:TITLE}"
        ]
    },
    "Comment Block": {
        "scope": "marktext",
        "prefix": "/\\*\\*",
        "body": [
            "/**",
            " * $1",
            " */"
        ],
        "description": "Create Comment block"
    }
}